{
    "manifest_version": 3,
    "name": "No Mouse",
    "version": "1.0.0",
    "description": "Extension for using keyboard instead of mouse",
    "permissions": [
      "storage",
      "tabs",
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  